<h1><%= t("users.index.title") %></h1>
<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:user_name) %></th>
      <th><%= User.human_attribute_name(:self_introduction) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.self_introduction %></td>
        <% next if current_user.id == user.id %>
        <% if current_user.following?(user) %>
          <td> 
            <%= form_with model: current_user.active_relationships.find_by(followed_id: user.id),
                        html: { method: :delete } do |f| %>
              <%= f.submit "フォロー解除", class: "btn" %>
            <% end %>
          </td>
        <% else %>
          <td> 
            <%= form_with model: current_user.active_relationships.build do |f| %>
              <div><%= hidden_field_tag :followed_id, user.id %></div>
              <%= f.submit "フォローする" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "TOP", root_path %>
